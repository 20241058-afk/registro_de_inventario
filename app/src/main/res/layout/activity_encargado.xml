<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#D3E3CD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.Encargado">

    <View
        android:id="@+id/header"
        android:layout_width="422dp"
        android:layout_height="95dp"
        android:background="#27AE60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/txtEncargado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="172dp"
        android:drawableLeft="@drawable/user"
        android:text="Agregar usuario"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutNombreE"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"
        android:hint="Ingrese el nombre"
        android:textColorHint="@color/black"
        app:endIconTint="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtapellido"
        app:layout_constraintEnd_toEndOf="@+id/txtEncargado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtEncargado">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNombreE"
            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:inputType="text"
            android:outlineSpotShadowColor="#000000"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:textSize="17sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtapellido"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"
        android:hint="Ingrese el apellidido paterno"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:endIconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtApellido2"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutNombreE"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutNombreE">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/edtAPaterno"
            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:inputType="text"
            android:outlineSpotShadowColor="#000000"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtApellido2"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"
        android:hint="ingrese el apellido materno"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:endIconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtcorreo"
        app:layout_constraintEnd_toEndOf="@+id/txtapellido"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtapellido">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtAMaterno"
            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:inputType="text"
            android:outlineSpotShadowColor="#000000"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtcorreo"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"
        android:hint="Ingrese el correo electronico"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:endIconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtMatricula"
        app:layout_constraintEnd_toEndOf="@+id/txtApellido2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtApellido2">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/edtCorreoE"
            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:inputType="text"
            android:outlineSpotShadowColor="#000000"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtMatricula"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"
        android:hint="Ingrese la matricula"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:endIconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayoutPass"
        app:layout_constraintEnd_toEndOf="@+id/txtcorreo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtcorreo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtUsuario"
            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:inputType="text"
            android:outlineSpotShadowColor="#000000"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPass"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"
        android:hint="Ingrese la contraseÃ±a"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayoutCodigoV"
        app:layout_constraintEnd_toEndOf="@+id/txtMatricula"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtMatricula">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/edtPass"
            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:inputType="textPassword"
            android:outlineSpotShadowColor="#000000"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutCodigoV"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"
        android:hint="ingrese el codigo de verificacion"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:endIconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/spnrol"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutPass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutPass">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCodigoV"
            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:inputType="text"
            android:outlineSpotShadowColor="#000000"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnAgregarE"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="#1E5631"
        android:text="@string/btnAgregarE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spnrol"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/spnrol" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spnrol"
        android:layout_width="286dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:background="#D6D6D6"
        android:textAlignment="center"
        android:spinnerItemStyle="@style/SpinnerTextStyle"
        android:spinnerDropDownItemStyle="@style/SpinnerTextStyle"
        app:layout_constraintBottom_toTopOf="@+id/btnAgregarE"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCodigoV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutCodigoV" />
</androidx.constraintlayout.widget.ConstraintLayout>